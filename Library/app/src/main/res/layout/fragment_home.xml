<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

    <Button
        android:id="@+id/btnCheckOut"
        android:layout_width="@dimen/btn_width_1"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_lv_2"
        android:background="@drawable/button_fill_green"
        android:text="@string/check_out"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/btnCheckIn"
        android:layout_width="@dimen/btn_width_1"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCheckOut"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_fill_red"
        android:text="@string/check_in"
        android:textColor="@color/red"/>


</RelativeLayout>