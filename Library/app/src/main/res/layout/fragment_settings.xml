<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/vertical_margin"
    android:layout_marginRight="@dimen/vertical_margin"
    android:layout_marginTop="@dimen/horizontal_margin"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email" />

    <EditText
        android:id="@+id/edit_current_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_email"
        android:hint="@string/current_password" />

    <EditText
        android:id="@+id/edt_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_current_password"
        android:layout_marginBottom="@dimen/margin_lv_1"
        android:hint="@string/new_password" />

    <EditText
        android:id="@+id/edt_new_re_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_new_password"
        android:layout_marginBottom="@dimen/margin_lv_2"
        android:hint="@string/new_re_password" />

    <Button
        android:id="@+id/btn_upgrade"
        android:layout_width="@dimen/btn_width_1"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_new_re_password"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_lv_1"
        android:background="@drawable/btn_2"
        android:text="@string/upgrade_account"
        android:textColor="@color/green" />

    <Button
        android:id="@+id/btn_help_me"
        android:layout_width="@dimen/btn_width_1"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_upgrade"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_lv_1"
        android:background="@drawable/btn_2"
        android:text="@string/help_me"
        android:textColor="@color/green" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="@dimen/btn_width_1"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_help_me"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_lv_2"
        android:background="@drawable/btn_4"
        android:text="@string/logout"
        android:textColor="@color/red" />


</RelativeLayout>