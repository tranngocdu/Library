<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/fragment_home_btn_checkout_margin"
        android:layout_marginTop="@dimen/fragment_home_btn_checkout_margin"
        android:text="@string/header_sign_up"
        android:textSize="@dimen/activity_login_tv_header_size"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHeader"
        android:hint="@string/email"/>

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtEmail"
        android:hint="@string/password"/>

    <EditText
        android:id="@+id/edtConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtPassword"
        android:layout_marginBottom="@dimen/fragment_home_btn_checkout_margin"
        android:hint="@string/confirm_password"/>

    <Button
        android:id="@+id/btn_create_account"
        android:layout_width="@dimen/fragment_home_btn_checkout_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtConfirmPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/fragment_home_btn_checkout_margin"
        android:background="@drawable/selector_btn_common_background_fill_green"
        android:text="@string/create_account"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/btn_have_account"
        android:layout_width="@dimen/fragment_home_btn_checkout_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_create_account"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/fragment_home_btn_checkout_margin"
        android:background="@drawable/selector_btn_common_background_no_fill_green"
        android:text="@string/have_account"
        android:textColor="@color/green"/>


</RelativeLayout>