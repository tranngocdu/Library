<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layoutFooter"
        android:orientation="horizontal" />

    <RadioGroup
        android:id="@+id/layoutFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_tab_bg"
        android:orientation="horizontal"
        android:weightSum="4">

        <RadioButton
            android:id="@+id/btnHome"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/btn_tab_menu_home"
            android:gravity="center"
            android:text="Home"
            android:textColor="@drawable/btn_tab_menu_home" />

        <RadioButton
            android:id="@+id/btnBooks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/btn_tab_menu_books"
            android:gravity="center"
            android:text="Books"
            android:textAlignment="gravity"
            android:textColor="@drawable/btn_tab_menu_books" />

        <RadioButton
            android:id="@+id/btnStudents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/btn_tab_menu_students"
            android:gravity="center"
            android:text="Students"
            android:textColor="@drawable/btn_tab_menu_students" />

        <RadioButton
            android:id="@+id/btnSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/btn_tab_menu_settings"
            android:gravity="center"
            android:text="Settings"
            android:textColor="@drawable/btn_tab_menu_settings" />
    </RadioGroup>
</RelativeLayout>
