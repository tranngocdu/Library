<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/red"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/library"
            android:textColor="@color/white"
            android:textSize="@dimen/action_bar_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnCheckOut"
            android:layout_width="@dimen/fragment_home_btn_checkout_width"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/fragment_home_btn_checkout_margin"
            android:background="@drawable/btn_common_background_fill_green"
            android:text="@string/check_out"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnCheckIn"
            android:layout_width="@dimen/fragment_home_btn_checkout_width"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnCheckOut"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_common_background_no_fill_red"
            android:text="@string/check_in"
            android:textColor="@color/red" />
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/Library/Library/app/src/main/res/layout/fragment_home.xml -->