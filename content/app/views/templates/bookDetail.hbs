
<div id="header">
  <div class="back">Books</div>
  <h1>Book Detail</h1>
</div>

<div id="wrapper">
  <div id="scroller" class="add-book">

  	{{#each this}}
	    <div class="title-art">

	    	{{#if cover_image}}
	      	<img src="{{cover_image}}">
	      {{else}}
	      		<div class="no-art">
	      			<div class="no-icon"></div>
	      		</div>
	      {{/if}}

	      <h2>{{title}}</h2>
	      <h3>{{author}}</h3>
				<h4>ISBN: {{ISBN}}</h4>
				<div id="totalBooks"><p>{{quantity_total}} Total Books</p></div>
				<p>{{quantity_available}} Available</p>
				
	    </div>
		  <ul id="studentlist">
			  <p class="first-name">Students with Books Checked Out</p> 
		    {{#each studentList}}
		      <p class="first-name">{{Name}}</p> 
			{{/each}}
		    </li>	

	    <div id="checkout-book" class="ab-btn button primary-fill">Check Out</div>
	    <div id="checkin-book" class="ab-btn button primary-fill">Check In</div>
	    <div id="edit-book" class="ab-btn button primary">Edit Quantity</div>
	    <div id="remove-book" class="ab-btn button secondary">Remove Book</div>
    {{/each}}

  </div> {{!-- /#scroller --}}

</div> {{!-- /#wrapper --}}

