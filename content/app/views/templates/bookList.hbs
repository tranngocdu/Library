<div id="header" class="extended-header">
	<div id="add" class="right-btn">Add</div>
  <h1>Books</h1>
  <div id="filter-wrap">
  	<div class="filter">
		<span id="filt-all" class="selected">All Books</span>
  		<span id="filt-available">Available</span>
  		<span id="filt-checked">Checked Out</span>
  	</div>
	</div>
</div>

<div id="wrapper" class="booklist-wrap">
  <div id="scroller" class="usersBooks">
  	   <ul id="booklist">
  {{#each this}}
      <li id="{{objectId}}">
        <table style="width:100%;">
        <tr>
          <td style="width:50%;">
        <p class="Title">{{title}}</p> 
        <p class="Author">{{author}}</p>
          </td>
          <td style="width:50%;">
            <div style="float:right;">
        <img src="{{cover_image}}">
            </div>
          </td>
        </tr>
        </table> 
      </li>
  {{/each}}

    </ul>

  </div> {{!-- /#scroller --}}
</div> {{!-- /#wrapper --}}

